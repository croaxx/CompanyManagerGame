<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style TargetType="TextBox">
    <Setter Property="Background" Value="{StaticResource TextBoxForegroundBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource TextBoxForegroundBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource TextBoxForegroundBrush}"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>